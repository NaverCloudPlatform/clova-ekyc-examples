<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ekyc_settings_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:keepScreenOn="true"
    android:orientation="horizontal">

    <ScrollView
        android:id="@+id/ekyc_settings_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginBottom="10dp"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarSize="10dp"
        app:layout_constraintBottom_toTopOf="@id/ekyc_done_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ekyc_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="34dp"
            android:paddingVertical="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/ekyc_settings_service_option_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingVertical="3dp"
                android:text="Service Option"
                android:textColor="@color/ClovaBlack"
                android:textSize="19dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ekyc_settings_document_url_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingVertical="3dp"
                android:text="@string/ekyc_settings_document_url"
                android:textColor="@color/ClovaBlack"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ekyc_settings_service_option_textview" />

            <EditText
                android:id="@+id/ekyc_settings_document_url_edittext"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_setting_edittext"
                android:gravity="center_vertical|start"
                android:lines="1"
                android:maxLines="1"
                android:padding="9dp"
                android:paddingVertical="3dp"
                android:singleLine="true"
                android:textColor="@color/ClovaGray"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ekyc_settings_document_url_textview" />


            <TextView
                android:id="@+id/ekyc_settings_document_key_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingVertical="3dp"
                android:text="@string/ekyc_settings_document_key"
                android:textColor="@color/ClovaBlack"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ekyc_settings_document_url_edittext" />

            <EditText
                android:id="@+id/ekyc_settings_document_key_edittext"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_setting_edittext"
                android:gravity="center_vertical|start"
                android:lines="1"
                android:maxLines="1"
                android:padding="9dp"
                android:paddingVertical="3dp"
                android:singleLine="true"
                android:textColor="@color/ClovaGray"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ekyc_settings_document_key_textview" />

            <TextView
                android:id="@+id/ekyc_settings_compare_url_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingVertical="3dp"
                android:text="@string/ekyc_settings_compare_url"
                android:textColor="@color/ClovaBlack"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ekyc_settings_document_key_edittext" />

            <EditText
                android:id="@+id/ekyc_settings_compare_url_edittext"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_setting_edittext"
                android:gravity="center_vertical|start"
                android:lines="1"
                android:maxLines="1"
                android:padding="9dp"
                android:paddingVertical="3dp"
                android:singleLine="true"
                android:textColor="@color/ClovaGray"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ekyc_settings_compare_url_textview" />


            <TextView
                android:id="@+id/ekyc_settings_compare_key_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingVertical="3dp"
                android:text="@string/ekyc_settings_compare_key"
                android:textColor="@color/ClovaBlack"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ekyc_settings_compare_url_edittext" />

            <EditText
                android:id="@+id/ekyc_settings_compare_key_edittext"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_setting_edittext"
                android:gravity="center_vertical|start"
                android:lines="1"
                android:maxLines="1"
                android:padding="9dp"
                android:paddingVertical="3dp"
                android:singleLine="true"
                android:textColor="@color/ClovaGray"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ekyc_settings_compare_key_textview" />

            <TextView
                android:id="@+id/ekyc_settings_similarity_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingVertical="3dp"
                android:text="@string/ekyc_settings_similarity_text"
                android:textColor="@color/ClovaBlack"
                android:textSize="19dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ekyc_settings_compare_key_edittext" />

            <TextView
                android:id="@+id/ekyc_settings_similarity_recommend_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ekyc_settings_similarity_description_text"
                android:textColor="@color/gray"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@id/ekyc_settings_similarity_textview"
                app:layout_constraintTop_toBottomOf="@id/ekyc_settings_similarity_textview" />

            <EditText
                android:id="@+id/ekyc_settings_similarity_edittext"
                android:layout_width="82dp"
                android:layout_height="43dp"
                android:background="@drawable/bg_setting_edittext"
                android:gravity="center_vertical|end"
                android:lines="1"
                android:maxLength="6"
                android:maxLines="1"
                android:padding="9dp"
                android:paddingVertical="3dp"
                android:singleLine="true"
                android:textColor="@color/ClovaBlack"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ekyc_settings_similarity_textview" />

            <TextView
                android:id="@+id/ekyc_settings_detecting_option_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingVertical="3dp"
                android:text="Detecting Option"
                android:textColor="@color/ClovaBlack"
                android:textSize="19dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ekyc_settings_similarity_recommend_textView" />

            <TextView
                android:id="@+id/ekyc_settings_face_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="@string/card_settings_face_location"
                android:textColor="@color/ClovaBlack"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ekyc_settings_detecting_option_textview" />

            <RadioGroup
                android:id="@+id/ekyc_settings_face_location_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ekyc_settings_face_location">

                <RadioButton
                    android:id="@+id/ekyc_settings_face_radio_button_no_matter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:button="@drawable/radio_selector"
                    android:paddingStart="10dp"
                    android:text="@string/card_settings_face_location_no_matter"
                    android:textColor="@color/ClovaBlack"
                    android:textSize="17dp" />

                <RadioButton
                    android:id="@+id/ekyc_settings_face_radio_button_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:button="@drawable/radio_selector"
                    android:paddingStart="10dp"
                    android:text="@string/card_settings_face_location_left"
                    android:textColor="@color/ClovaBlack"
                    android:textSize="17dp" />

                <RadioButton
                    android:id="@+id/ekyc_settings_face_radio_button_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:button="@drawable/radio_selector"
                    android:paddingStart="10dp"
                    android:text="@string/card_settings_face_location_right"
                    android:textColor="@color/ClovaBlack"
                    android:textSize="17dp" />
            </RadioGroup>


            <TextView
                android:id="@+id/ekyc_settings_motion_spoofing_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:text="@string/ekyc_settings_face_expression_spoofing_text"
                android:textColor="@color/ClovaBlack"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ekyc_settings_face_location_radiogroup" />

            <RadioGroup
                android:id="@+id/ekyc_motion_spoofing_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ekyc_settings_motion_spoofing_textview">

                <RadioButton
                    android:id="@+id/ekyc_settings_mouth_expression_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:button="@drawable/radio_selector"
                    android:paddingStart="10dp"
                    android:text="@string/face_motion_mouth_open"
                    android:textColor="@color/ClovaBlack"
                    android:textSize="17dp" />

                <RadioButton
                    android:id="@+id/ekyc_settings_eyes_expression_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:button="@drawable/radio_selector"
                    android:paddingStart="10dp"
                    android:text="@string/face_motion_eye_blink"
                    android:textColor="@color/ClovaBlack"
                    android:textSize="17dp" />

                <RadioButton
                    android:id="@+id/ekyc_settings_pose_expression_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:button="@drawable/radio_selector"
                    android:paddingStart="10dp"
                    android:text="@string/ekyc_settings_pose_expression_spoofing_text"
                    android:textColor="@color/ClovaBlack"
                    android:textSize="17dp" />
            </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/ekyc_done_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="34dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_enable"
        android:backgroundTint="@color/ClovaBlue"
        android:elevation="0dp"
        android:text="@string/ekyc_settings_done"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
