<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/ClovaBlue" android:width="6dp" />
            <corners android:radius="15dp" />
            <solid android:color="@color/white" />
            <size
                android:width="20dp"
                android:height="20dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>

    <item android:state_checked="true" android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/ClovaGray" android:width="6dp" />
            <corners android:radius="15dp" />
            <solid android:color="@color/white" />
            <size
                android:width="20dp"
                android:height="20dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/ClovaGray" android:width="1.5dp" />
            <corners android:radius="15dp" />
            <solid android:color="@color/white"/>
            <size
                android:width="20dp"
                android:height="20dp" />
            <padding
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>
</selector>